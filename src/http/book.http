###
# Book Routes
###

# Create new book (Admin only)
POST {{bookUrl}}/create
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
    "title": "Phap y co",
    "author": "AAAAAA",
    "summary": "Nhung vu an phan y",
    "publisher": "NXB Phuong Nam",
    "price": 250000,
    "rating": 5,
    "category_id": "{{categoryId}}",
    "summaryvector": "tu thi. kham  nghiem",
    "quantity": 50,
    "sold": 20
}

###

# Get all books
GET {{bookUrl}}/all

###

# Get book by ID
GET {{bookUrl}}/getBook/{{bookId}}

###

# Update book (Admin only)
PUT {{bookUrl}}/update
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
    "id": "{{bookId}}",
    "title": "sach it nang cao"
}

###

# Toggle book disable status (Admin only)
PUT {{bookUrl}}/toggle-disable
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
    "id": "{{bookId}}",
    "isDisable": true
}

###

# Update book summary vector (Admin only)
PUT {{bookUrl}}/summaryvector
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
    "id": "{{bookId}}",
    "summaryvector": "cap nhat di"
}
